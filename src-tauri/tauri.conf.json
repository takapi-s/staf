{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "geminiscope",
  "version": "0.1.0",
  "identifier": "com.geminiscope.app",
  "build": {
    "frontendDist": "../build",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "geminiscope",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "fs": {
      "requireLiteralLeadingDot": false
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://raw.githubusercontent.com/takapi-s/geminiscope/main/updater.json"
      ],
      "dialog": true,
      "pubkey": ""
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "copyright": "",
    "category": "Utility",
    "shortDescription": "CSV processing tool using Google Gemini AI",
    "longDescription": "An efficient CSV processing application powered by Google Gemini AI for data transformation and analysis",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
