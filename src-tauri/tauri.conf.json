{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "STAF",
  "version": "0.1.2",
  "identifier": "com.staf.app",
  "build": {
    "frontendDist": "../build/client",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "STAF",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "dragDropEnabled": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "fs": {
      "requireLiteralLeadingDot": false
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://raw.githubusercontent.com/takapi-s/staf/main/updater.json"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDI4NjhCNUNBMDIxN0Y3OUIKUldTYjl4Y0N5clZvS0JqVElPNFZiWGpJT0R5c3FnVDFSWEF3eWhzMWRZb0QxTldTNmFxTVpTT2sK"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "copyright": "",
    "category": "Utility",
    "shortDescription": "Structured AI flow for reliable CSV transformation",
    "longDescription": "An AI-assisted, structured flow to transform CSV data reliably at scale",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "createUpdaterArtifacts": true
  }
}
